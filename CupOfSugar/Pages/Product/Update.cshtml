@page
@using CupOfSugar.WebSite.Services
@inject JsonFileProductService ProductService
@model CupOfSugar.Pages.Product.UpdateModel
@{
    ViewData["Title"] = "Update page";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">

<body id="update-page-body">
    <h1 class="update-title">Need to change the info of items you're lending? Go ahead and fill up the updated details...</h1>
    <div class="container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(x => x.Product.Id)

            <div class="row form-group">
                <label asp-for="Product.Title" class="col-sm-3 col-form-label control-label lend-form-label"></label>
                <input asp-for="Product.Title" class="col-sm-9 form-control input-color" />
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>

            <div class="row form-group">
                <label asp-for="Product.Description" class="col-sm-3 col-form-label control-label lend-form-label"></label>
                <input asp-for="Product.Description" class="col-sm-9 form-control input-color" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="row form-group">
                <label asp-for="Product.Url" class="col-sm-3 col-form-label control-label lend-form-label"></label>
                <input asp-for="Product.Url" class="col-sm-9 form-control input-color" />
                <span asp-validation-for="Product.Url" class="text-danger"></span>
            </div>

            <div class="row form-group">
                <label asp-for="Product.Image" class="col-sm-3 col-form-label control-label lend-form-label"></label>
                <input asp-for="Product.Image" class="col-sm-9 form-control input-color" />
                <span asp-validation-for="Product.Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary lend-form-label lend-btn" />
            </div>
        </form>
    </div>
</body>

<script src="_framework/blazor.server.js"></script>